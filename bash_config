# Add my locally installed programs to path

if [[ $PATH != *"/.local/bin"* ]]; then
  export PATH=${HOME}/.local/bin:$PATH
fi

if [[ $PATH != *"${HOME}/bin"* ]]; then
  export PATH=${HOME}/bin:$PATH
fi

workon() {
  if (( $# != 1 ))
  then
    echo "Usage: workon <envname>"
  else
    source ~/.virtualenvs/$1/bin/activate
  fi
}
