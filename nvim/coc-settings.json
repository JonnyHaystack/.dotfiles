{
  "languageserver": {
    "clangd": {
      "command": "clangd",
      "rootPatterns": [
        "compile_flags.txt",
        "compile_commands.json",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "filetypes": ["c", "cpp", "objc", "objcpp"]
    }
  },
  "snippets.userSnippetsDirectory": "~/.vim/my-snippets/UltiSnips",
  "python.formatting.provider": "yapf",
  "python.formatting.blackArgs": ["-l", "79"],
  "java.home": "/usr/lib/jvm/java-8-openjdk"
}
