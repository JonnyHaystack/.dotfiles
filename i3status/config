general {
  output_format = "i3bar"
  colors = true
  interval = 5
  # These will be used if not supplied by a module
  color = '#FFFFFF'
  color_good = '#00FF00'
  color_bad = '#FF0000'
  color_degraded = '#FFFF00'
}

order += "disk /"
order += "file_status VPN"
order += "group network"
order += "online_status"
order += "cpu_temperature 0"
order += "load"
order += "static_string screenshot"
order += "battery_level"
order += "volume_status"
order += "group tz"
order += "static_string i3lock"

disk "/" {
  format = " %free"
}

file_status VPN {
  # path exists when a VPN tunnel launched by nmcli/nm-applet is active
  format = ""
  path = "/proc/sys/net/ipv4/conf/tun0"
}

group network {
  external_script ping {
    cache_timeout = 1
    format = "{output}ms"
    script_path = "~/scripts/i3/ping.sh"
  }

  wireless wlp3s0 {
    format_up = " : %ip on %essid (%quality)"
    format_down = " : down"
  }

  ethernet enp2s0 {
    # if you use %speed, i3status requires the cap_net_admin capability
    format_up = " %ip"
    format_down = " down"
  }

  net_rate {
    format = "{down}  {up}"
#    format = " {total}"
    precision = 0
    format_no_connection = ""
    cache_timeout = 5
  }
}

battery_level {
  cache_timeout = 10
  color_bad = "#FF0000"
  color_charging = "#FCE94F"
  color_degraded = "#ff7a00"
  color_good = "#00FF00"

  format_notify_charging = "charging"
  format_notify_discharging = "discharging {percent}"
  hide_when_full = False
  hide_seconds = True
  notification = True
  notify_low_level = True
  blocks = ""
  charging_character = ""
  format = "{percent}% {icon} {time_remaining}"
}

volume_status {
  cache_timeout = 10
  button_mute = 1
  button_up = 4
  button_down = 5
  command = "pactl"
  format = "[\?if=is_input |🔊] {percentage}"
  format_muted = "[\?if=is_input |🔇]"
  thresholds = [
          (0, "#FF0000"),
          (10, "#FF3800"),
          (20, "#FF7100"),
          (30, "#FFAA00"),
          (40, "#FFE200"),
          (50, "#E2FF00"),
          (60, "#A9FF00"),
          (70, "#71FF00"),
          (80, "#38FF00"),
          (90, "#FFFFFF")
      ]
}

static_string screenshot {
  format = ""
  on_click 1 = "exec --no-startup-id maim -s ~/Pictures/Screenshots/img-$(date +%Y-%m-%d)-$(ls ~/Pictures/Screenshots/img* | wc -l).png && notify-send -i screenie 'Screenshot' '~/Pictures/Screenshots'"
}

static_string i3lock {
  format = ""
  on_click 1 = "exec --no-startup-id i3lock -d -e -i ~/Pictures/wallpaper.jpg -f"
}

online_status {
  format_offline = ""
  format_online = ""
  timeout = 20
  url = "http://google.com/"
}

group tz {
  format = "{output}"
  tztime local {
    format = "%Y-%m-%d %H:%M:%S"
  }

  tztime sg {
    format = "%Y-%m-%d %H:%M:%S SG"
    timezone = "Asia/Singapore"
  }

  tztime oh {
    format = "%Y-%m-%d %H:%M:%S ET"
    timezone = "America/New_York"
  }
}

load {
  format = "%5min"
}

cpu_temperature 0 {
  format = " %degrees °C"
  path = "/sys/devices/platform/coretemp.0/hwmon/hwmon3/temp1_input"
}
